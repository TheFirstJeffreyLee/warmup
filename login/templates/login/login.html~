<script>
 $(document).ready(function() {
	 $('#out').show();
	 $('#in').hide();
 });

 $('#login').click(function() {
   $('#out').hide();
   $('#in').show();
   $('#in_text').text("Success Bitches");
 });
 
 $('#logout').click(function() {
   $('#out').show();
   $('#in').hide();
   $('#out_text').text("Welcome");
 });
 
</script>

